<div id="content"></div>
<div class="center">
    <div class="chat">
      <div class="contact bar">
        <div class="pic stark"></div>
        <div class="name">
          Sample
        </div>
        <div class="seen">
          Today at 12:56
        </div>
      </div>
      <div class="messages" id="chat">
        <div class="time">
          Today at 11:41
        </div>
        <div id="messageList"></div>
      </div>
      <div class="input">
        <i class="fas fa-camera"></i><i class="far fa-laugh-beam"></i><input placeholder="Type your message here!" type="text" /><i class="fas fa-microphone"></i>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    var chat = document.getElementById('chat');
    chat.scrollTop = chat.scrollHeight - chat.clientHeight; 

    const source = new EventSource('/events');

    source.addEventListener('message', message => {
        const data = JSON.parse(message.data);      
      // Display the event data in the `content` div
        document.querySelector('#content').innerHTML = data.message;
        document.getElementById('messageList').innerHTML += '<div class="message ' + ((data.sent) ? 'parker' : 'stark') + '">' + data.message + '</div>';
    });
</script>
